<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">


<bean class="p1.Account" id="acc1" scope="singleton" autowire="byType">
<property name="accontNumber" value="123"/>
<property name="accountName" value="Aarti"/>
<property name="balance" value="20000"/>
<property name="branchName" value="Abcde"/>
<property name="state" value="Andhra"/>
<property name="country" value="India"/>
<property name="stocks">
<list>
	<ref bean="st1"></ref>
	<ref bean="st2"></ref>
</list>
</property>
<property name="policy">
<list>
<ref bean="pol1"></ref>
<ref bean="pol2"></ref>
</list> 
</property>
</bean>

<bean class="p1.Account" id="acc2" scope="singleton" autowire="byType">
<property name="accontNumber" value="234"/>
<property name="accountName" value="Sujith"/>
<property name="balance" value="45000"/>
<property name="branchName" value="Hijklm"/>
<property name="state" value="Andhra"/>
<property name="country" value="India"/>
<property name="stocks">
<list>
<ref bean="st2"></ref>
</list>
</property>
<property name="policy" ref="pol1"></property>
</bean>

<bean class="p1.Account" id="acc3" scope="singleton" autowire="byType">	     	
<property name="accontNumber" value="459"/>
<property name="accountName" value="Chandu"/>
<property name="balance" value="30000"/>
<property name="branchName" value="Xyzab5"/>
<property name="state" value="Andhra"/>
<property name="country" value="India"/>
<property name="stocks">
<list>
<ref bean="st1"></ref>
</list>
</property>
<property name="policy" ref="pol1"></property>
</bean>

<bean class="p1.Stock" id="st1">
			<property name="stockId" value="1"></property>
			<property name="stockName" value="Infosys"></property>
			<property name="bookValue" value="200"></property>
			<property name="currentPrice" value="2900"></property>
			<property name="high52" value="3000"></property>
			<property name="low52" value="1900"></property>
	
</bean>
<bean class="p1.Stock" id="st2">
			<property name="stockId" value="2"></property>
			<property name="stockName" value="Reliance"></property>
			<property name="bookValue" value="150"></property>
			<property name="currentPrice" value="1900"></property>
			<property name="high52" value="2500"></property>
			<property name="low52" value="1400"></property>
	
</bean>

<bean class="p1.Policy" id="pol1">
			<property name="policyId" value="121"></property>
			<property name="policyName" value="Medicine"></property>
			<property name="sumAssured" value="150000"></property>
			<property name="premiumAmount" value="300000"></property>
	
</bean>

<bean class="p1.Policy" id="pol2">
			<property name="policyId" value="150"></property>
			<property name="policyName" value="Life Insurance"></property>
			<property name="sumAssured" value="270000"></property>
			<property name="premiumAmount" value="450000"></property>
	
</bean>
</beans>
	